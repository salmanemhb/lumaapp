# Luma Backend Environment Variables

# Database (Supabase Postgres)
DATABASE_URL=postgresql://user:password@host:5432/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Email (Resend)
RESEND_API_KEY=re_your_resend_api_key_here
ADMIN_EMAIL=admin@getluma.es

# Frontend URL (for CORS and links)
FRONTEND_URL=https://getluma.es
ALLOWED_ORIGINS=https://getluma.es,http://localhost:5173,http://localhost:3000

# Google Form for Company Verification
GOOGLE_FORM_URL=https://forms.google.com/your-form-id-here

# Emission Factors (Spain defaults - kg CO2e per unit)
ELECTRICITY_FACTOR_KG_PER_KWH=0.231
NATURAL_GAS_FACTOR_KG_PER_KWH=0.202
DIESEL_FACTOR_KG_PER_L=2.680
GASOLINE_FACTOR_KG_PER_L=2.310
ROAD_FREIGHT_FACTOR_KG_PER_TKM=0.062
RAIL_FREIGHT_FACTOR_KG_PER_TKM=0.018
SEA_FREIGHT_FACTOR_KG_PER_TKM=0.010
AIR_FREIGHT_FACTOR_KG_PER_TKM=0.500

# Natural Gas Conversion (m3 to kWh)
NATURAL_GAS_M3_TO_KWH=11.63

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,csv,xlsx,jpg,png

# Environment
ENVIRONMENT=development
DEBUG=True
